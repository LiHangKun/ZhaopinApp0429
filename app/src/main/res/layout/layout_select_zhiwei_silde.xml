<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slide_ll"
    android:layout_width="155dp"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="65dp"
    android:layout_gravity="left"
    android:background="@mipmap/slide_bg_0"
    android:orientation="vertical">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.yoooooo.fastbuy.widgect.CircleImageView
                android:id="@+id/main_head_portrait"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="10dp"
                android:src="@mipmap/zhanwei_advatar" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/main_head_portrait"
                android:layout_alignTop="@id/main_head_portrait"
                android:src="@mipmap/icon_main_change_advatar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_hi"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_setting_huiyuan"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:text="@string/setting_huiyuan"
                android:textColor="@color/blue"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/main_uesr_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:text="18526403936" />

        <TextView
            android:id="@+id/main_set_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/setting_pwd"
            android:text="@string/pwd_setting"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/main_set_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/setting_addr"
            android:text="@string/address_setting"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ListView
            android:id="@+id/main_address_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:scrollbars="none"
            android:visibility="visible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/main_set_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/setting_exit"
                android:text="@string/exit_setting"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>

</LinearLayout>
