<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_37"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_37"
    android:paddingBottom="@dimen/dp_34">

    <com.lx.zhaopin.view.CustomLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:orientation="vertical"
        app:linearBcSolidColor="@color/white"
        app:linearBc_corner_radius="12dp">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:gravity="center"
            android:text="全职"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F1F1" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="兼职"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/sp_17" />

    </com.lx.zhaopin.view.CustomLinearLayout>

    <com.lx.zhaopin.view.CustomTextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/sp_17"
        app:background_corner_radius="12dp"
        app:bcNormalSolidColor="@color/white" />


</LinearLayout>