                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="此处是流布局的福利待遇" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#e7e7e7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splashbj"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius_bottom_left="@dimen/dp_5"
                    app:riv_corner_radius_bottom_right="@dimen/dp_5"
                    app:riv_corner_radius_top_left="@dimen/dp_5"
                    app:riv_corner_radius_top_right="@dimen/dp_5"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="111111111111111111111111111111111111111111111111111111111111"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_14" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:text="未融资"
                                android:textColor="#3D3D3D"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:background="#e7e7e7" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:text="20-99人"
                                android:textColor="#3D3D3D"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginBottom="@dimen/dp_15"
                                android:background="#e7e7e7" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:text="创业型公司"
                                android:textColor="#3D3D3D"
                                android:textSize="@dimen/sp_12" />


                            <!-- <View
                                 android:layout_width="1px"
                                 android:layout_height="match_parent"
                                 android:layout_marginLeft="@dimen/dp_5"
                                 android:layout_marginTop="@dimen/dp_15"
                                 android:layout_marginRight="@dimen/dp_5"
                                 android:layout_marginBottom="@dimen/dp_15"
                                 android:background="#e7e7e7" />


                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="match_parent"
                                 android:gravity="center_vertical"
                                 android:singleLine="true"
                                 android:text="金水区"
                                 android:textColor="#3D3D3D"
                                 android:textSize="@dimen/sp_12" />

                                 -->

                        </LinearLayout>


                    </LinearLayout>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/jiantouyou" />


                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splashbj" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:background="@drawable/buttonbj401"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_20">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="是上海网络科技有限公司旗下素材是上海网络科技有限公司旗下素材在线交易网站是上海网络科技有限公司旗下素材在线交易网站在线交易网站，于2016年7月上线运营。" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@drawable/jiantouyou" />

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>


    </ScrollView>


    <!--底部按钮部分
   立即沟通 dibuView1
   立即沟通和申请职位 dibuView2
   申请职位 dibuView3
   预约面试 dibuView4
    -->


    <!--立即沟通-->

    <TextView
        android:id="@+id/dibuView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/edittext_shape"
        android:gravity="center"
        android:text="立即沟通"
        android:textColor="#1678FF"
        android:visibility="gone" />


    <!--立即沟通和职位申请-->
    <LinearLayout
        android:id="@+id/dibuView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3.1">


        <TextView
            android:id="@+id/quxiaoTV"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/edittext_shape"
            android:gravity="center"
            android:text="立即沟通"
            android:textColor="#1678FF" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="2"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="申请职位"
            android:textColor="#fff" />


    </LinearLayout>


    <!--申请职位-->
    <TextView
        android:id="@+id/dibuView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text="申请职位"
        android:textColor="#fff"
        android:visibility="gone" />


    <!--预约面试-->
    <TextView
        android:id="@+id/dibuView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/button_shape"
        android:gravity="center"
        android:text="预约面试"
        android:textColor="#fff" />


</LinearLayout>