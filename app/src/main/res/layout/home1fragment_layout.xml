<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--固定的顶部高度城市和搜索栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/mainColor888"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">


            <LinearLayout
                android:id="@+id/addView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/shouye_dingwei2" />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:maxLength="8"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/shouye_xiala" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llSearchView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/top1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/button_shape1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/shouye_shoucang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:gravity="center"
                            android:text="  请输入关键词搜索"
                            android:textColor="@color/search_bg"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/selectView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/shouye_qiehuan" />


            </LinearLayout>


        </LinearLayout>
        <!--固定的顶部高度城市和搜索栏-->

        <!--这部分是文字和列表的布局类型1界面部分-->
        <LinearLayout
            android:id="@+id/ViewType1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10">


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="推荐"
                    android:textColor="#333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:gravity="center"
                    android:text="最新"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:gravity="center"
                    android:text="附近"
                    android:textColor="#666"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="normal" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e7e7e7" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_50" />

        </LinearLayout>
        <!--这部分是文字和列表的布局类型1界面部分-->


        <!--这部分是卡片部分-->
        <FrameLayout
            android:id="@+id/ViewType2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:background="@color/mainColor888" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/dituImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_80"
                    android:src="@drawable/shouye_bg"
                    android:layout_marginBottom="50dp"
                    android:scaleType="fitXY"
                    />


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:src="@drawable/kong_firstpage" />


                    <TextView
                        android:id="@+id/noDataText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_below="@+id/noData"
                        android:layout_marginBottom="100dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:visibility="invisible"
                        android:text="@string/nodata_list"
                        android:textColor="#999"
                        android:textSize="@dimen/dp_15" />

                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewKa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_80"
                    android:layout_marginBottom="100dp"
                    />

                <com.lx.zhaopin.view.dragcard.DragCardsView
                    android:id="@+id/dragCardsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="@dimen/dp_0"
                    android:layout_marginBottom="@dimen/dp_0"
                    android:background="#00ffffff"
                    android:visibility="gone"
                    app:cards_height="600dp"
                    app:cards_shift="20"
                    app:cards_width="500dp"
                    app:max_visible="13"
                    app:rotation_degrees="15" />

            </FrameLayout>


            <!--
                android:background="@mipmap/yj_top_bg"
            -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="0.6">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:id="@+id/open_layout"
                                android:background="@drawable/shouye_open_bg"
                                android:visibility="gone"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/shouye_you"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="60dp"
                                    android:layout_marginLeft="13dp"
                                    android:id="@+id/close_img"
                                    />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/pingbi_img"
                                    android:src="@drawable/shouye_open"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="60dp"
                                    />

                                <ImageView
                                    android:id="@+id/open_list"
                                    android:layout_width="@dimen/dp_23"
                                    android:layout_height="@dimen/dp_26"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/shoucang_hezi"
                                    android:layout_marginRight="13dp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="15dp"
                                android:id="@+id/yincang_layout"
                                >
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/shouye_zuo"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="20dp"
                                    android:id="@+id/open_img"

                                    />

                                <RelativeLayout
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="@dimen/dp_50"
                                    android:layout_marginRight="@dimen/dp_10"
                                    android:background="@drawable/shoucang_bg"
                                    android:gravity="center_vertical">


                                    <ImageView
                                        android:id="@+id/fl_list"
                                        android:layout_width="@dimen/dp_23"
                                        android:layout_height="@dimen/dp_26"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/shoucang_hezi" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>
        <!--这部分是卡片部分-->

    </LinearLayout>


    <!--这部分是引导图-->
    <LinearLayout
        android:id="@+id/allTuCeng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <!--
        android:scaleType="centerCrop"
        android:scaleType="center"
        android:scaleType="fitXY"
        android:scaleType="matrix"
        android:scaleType="centerInside"
        android:scaleType="fitCenter"
        android:scaleType="fitStart"
        -->

        <ImageView
            android:id="@+id/tuCeng1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/tuceng1" />

        <ImageView
            android:id="@+id/tuCeng2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/tuceng2" />


    </LinearLayout>

</FrameLayout>