<?xml version="1.0" encoding="utf-8"?>
<com.lin.cardlib.SwipeTouchLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onClickView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/buttonbj401">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/work_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#151413"
                    android:textSize="16sp"
                    tools:text="销售经理" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="@mipmap/work_salary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/work_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        tools:text="3-6k" />

                    <TextView
                        android:id="@+id/work_salary_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:drawableStart="@mipmap/icon_salary_hot"
                        android:drawablePadding="4dp"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        tools:text="14薪" />
                </LinearLayout>

                <TextView
                    android:id="@+id/work_salary_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="#F6646F"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/work_info_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#939393"
                android:textSize="12sp"
                tools:text="天津城区滨海新区｜1—2年｜专科" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableStart="@mipmap/icon_work_duty"
                android:drawablePadding="4dp"
                android:text="岗位职责"
                android:textColor="#151413"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/work_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="3"
                android:textColor="#151413"
                android:textSize="14sp"
                tools:text="1.深入了解公司总体营销方案" />

            <TextView
                android:id="@+id/work_company_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@mipmap/icon_work_pos"
                android:drawablePadding="4dp"
                android:text="岗位职责"
                android:textColor="#151413"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shape_main_dash_line" />

            <LinearLayout
                android:id="@+id/work_info_next_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/roundedImageView"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splashbj"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius_bottom_left="@dimen/dp_5"
                    app:riv_corner_radius_bottom_right="@dimen/dp_5"
                    app:riv_corner_radius_top_left="@dimen/dp_5"
                    app:riv_corner_radius_top_right="@dimen/dp_5"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/work_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#151413"
                        android:textSize="16sp"
                        tools:text="七盏灯（天津）教育科技" />

                    <TextView
                        android:id="@+id/work_company_info_short"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#939393"
                        android:textSize="12sp"
                        tools:text="D轮及以上｜培训机构｜1000—9999人" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/work_company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#151413"
                android:textSize="14sp"
                tools:text="七盏灯（天津）教育科技有限公司，2018年7月成立于天津滨海—中关村科技园。公司核心任务是知识服务、软件开发及平台运营…现已开发并推广面向企业客户使用的“七盏灯移动学习平台”" />
        </LinearLayout>

    </FrameLayout>
</com.lin.cardlib.SwipeTouchLayout>