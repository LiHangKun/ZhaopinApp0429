<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/biankuang19"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/splashbj"
            app:riv_border_width="0dip"
            app:riv_corner_radius_bottom_left="@dimen/dp_5"
            app:riv_corner_radius_bottom_right="@dimen/dp_5"
            app:riv_corner_radius_top_left="@dimen/dp_5"
            app:riv_corner_radius_top_right="@dimen/dp_5"
            app:riv_mutate_background="true"
            app:riv_oval="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_100"
                    android:singleLine="true"
                    android:text="有限公司公司"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-12-12 08:55"
                    android:textColor="@color/zhiwei_location_text"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textStyle="normal" />

            </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_4">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       >
                       <TextView
                           android:id="@+id/positionName"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/main_blue"
                           android:textSize="@dimen/sp_12"
                           android:text="待面试" />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/fankui_now"
                           android:layout_marginLeft="@dimen/dp_5"
                           android:layout_gravity="center_vertical"
                           />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/first_layout"
                       android:layout_marginLeft="@dimen/dp_10"
                       >
                       <TextView
                           android:id="@+id/first1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/zhiwei_location_text"
                           android:textSize="@dimen/sp_12"
                           android:text="待面试" />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/fankui_before"
                           android:layout_marginLeft="@dimen/dp_5"
                           android:layout_gravity="center_vertical"
                           />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/second_layout"
                       android:layout_marginLeft="@dimen/dp_10"
                       >
                       <TextView
                           android:id="@+id/second"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/zhiwei_location_text"
                           android:textSize="@dimen/sp_12"
                           android:text="待面试" />
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/fankui_before"
                           android:layout_marginLeft="@dimen/dp_5"
                           android:layout_gravity="center_vertical"
                           />
                   </LinearLayout>

               </LinearLayout>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/etc_img"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:src="@drawable/fankui_etc"
                   />
           </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="在这里学会计软件有限在这里学会计软件有限公司在这里学会计软件有限公司在这里学会计软件有限公司在这里学会计软件有限公司公司"
                    android:textColor="#666"
                    android:visibility="gone"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/button_shape40r"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="0"
                    android:visibility="gone"
                    android:textColor="#fff" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>