<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_15"
    android:id="@+id/AllllView"
    android:background="@drawable/biankuang19"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:text="app产品经理"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv1"
                    android:src="@drawable/shouye_biaoqian2" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10K-20K"
                        android:textColor="@color/wode_xiaoxi_color"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/company_name"
            android:text="天剑"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/dp_5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="8"
                android:singleLine="true"
                android:text="郑州市金水区"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/line1"
                android:background="@color/text_color" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="8"
                android:singleLine="true"
                android:text="1-3年"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:id="@+id/line2"
                android:layout_gravity="center_vertical"
                android:background="@color/text_color" />


            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="本科"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="#e7e7e7"
                android:visibility="invisible" />


        </LinearLayout>

        <com.lx.zhaopin.view.FlowLiner
            android:id="@+id/flowLiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="10dp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/splashbj"
                app:riv_border_width="0dip"
                app:riv_corner_radius_bottom_left="@dimen/dp_12"
                app:riv_corner_radius_bottom_right="@dimen/dp_12"
                app:riv_corner_radius_top_left="@dimen/dp_12"
                app:riv_corner_radius_top_right="@dimen/dp_12"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mengbanImageView"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@color/open_bg"
                android:visibility="gone"
                app:riv_border_width="0dip"
                app:riv_corner_radius_bottom_left="@dimen/dp_12"
                app:riv_corner_radius_bottom_right="@dimen/dp_12"
                app:riv_corner_radius_top_left="@dimen/dp_12"
                app:riv_corner_radius_top_right="@dimen/dp_12"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

        </RelativeLayout>




     <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLength="8"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="天津衣"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12"
              />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_2"
                android:background="@color/text_color"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:id="@+id/point_view"
                />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:text="HR"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

         <LinearLayout
             android:id="@+id/caoZuoView"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
              android:layout_alignParentRight="true"
             android:orientation="horizontal">


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/caoZuoViewTv1"
                     android:layout_width="@dimen/dp_60"
                     android:layout_height="@dimen/dp_25"
                     android:background="@drawable/edittext_shape"
                     android:gravity="center"
                     android:text="拒绝"
                     android:textSize="@dimen/sp_12"
                     android:textColor="#1678FF" />


                 <TextView
                     android:id="@+id/caoZuoViewTv2"
                     android:layout_width="@dimen/dp_60"
                     android:layout_height="@dimen/dp_25"
                     android:layout_marginLeft="@dimen/dp_10"
                     android:background="@drawable/code_little_bg"
                     android:gravity="center"
                     android:text="同意"
                     android:textSize="@dimen/sp_12"
                     android:textColor="#fff" />

             </LinearLayout>

         </LinearLayout>


         </RelativeLayout>

    </LinearLayout>

       </LinearLayout>

       <ImageView
           android:id="@+id/imageView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:visibility="gone"
           android:src="@drawable/shenqing_yitingzhao" />
   </RelativeLayout>
</LinearLayout>